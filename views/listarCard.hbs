<div class="container m-3">
    <div class="m-5 text-center">
        <h1>Listado de productos en Cards</h1>
    </div>

    <div class="d-flex flex-row m-5 text-center justfy-content-center">
        {{#each cards}}
        <div class="card " style="width: 18rem;">
            <img src="{{imagenProducto}}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{nombreProducto}}</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                    card's
                    content.</p>
                    {{_id}}
              {{!--   <form method="post"> --}}
                    <a href="/producto/cards/{{ _id }}" class="btn btn-success mb-2">Ver Producto</a>
                    <a href="/producto/eliminar/{{ _id }}" class="btn btn-danger mb-2">Eliminar Producto</a>
                    <a href="/producto/actualizar/{{ _id }}" class="btn btn-warning">Actualizar Producto</a>
              {{!--   </form> --}}
            </div>
        </div>
        {{/each}}
    </div>

</div>